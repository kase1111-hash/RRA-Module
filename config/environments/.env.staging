# RRA Module - Staging Environment Configuration
# For staging/test deployments

# =============================================================================
# Environment
# =============================================================================
RRA_ENV=staging

# =============================================================================
# API Configuration
# =============================================================================
RRA_API_HOST=0.0.0.0
RRA_API_PORT=8000
RRA_API_URL=https://staging-api.rra.dev
RRA_DEBUG=true

# =============================================================================
# Logging
# =============================================================================
RRA_LOG_LEVEL=INFO

# =============================================================================
# Security
# =============================================================================
RRA_AUTH_ENABLED=true
RRA_JWT_SECRET=${JWT_SECRET}
RRA_CORS_ORIGINS=https://staging.rra.dev,https://staging-app.rra.dev
RRA_SECRETS_BACKEND=file

# Rate limiting
RRA_RATE_LIMIT_ENABLED=true
RRA_RATE_LIMIT_REQUESTS=200

# =============================================================================
# Blockchain (Testnets)
# =============================================================================
RRA_DEFAULT_CHAIN=sepolia
STORY_NETWORK=testnet

# RPC URLs (use dedicated endpoints)
ETH_RPC_URL=${ALCHEMY_SEPOLIA_URL}
STORY_RPC_URL=https://aeneid.storyrpc.io

# Story Protocol (testnet)
STORY_PRIVATE_KEY=${STORY_PRIVATE_KEY}

# DID Registry
NLC_DID_REGISTRY_ADDRESS=${DID_REGISTRY_ADDRESS}

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DB_HOST=${POSTGRES_HOST}
DB_PORT=5432
DB_NAME=rra_staging
DB_USER=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}

# =============================================================================
# Cache (Redis)
# =============================================================================
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379

# =============================================================================
# Feature Flags
# =============================================================================
RRA_FEATURE_ENABLE_STORY_PROTOCOL=true
RRA_FEATURE_ENABLE_SUPERFLUID_STREAMING=true
RRA_FEATURE_ENABLE_AI_NEGOTIATION=true
RRA_FEATURE_ENABLE_AUTO_PRICING=true

# =============================================================================
# External Services
# =============================================================================
WORLDCOIN_APP_ID=${WORLDCOIN_STAGING_APP_ID}
BRIGHTID_APP_NAME=rra-module-staging
GITHUB_WEBHOOK_SECRET=${GITHUB_WEBHOOK_SECRET}
GITHUB_API_TOKEN=${GITHUB_API_TOKEN}

# =============================================================================
# Monitoring
# =============================================================================
RRA_METRICS_ENABLED=true
RRA_TRACING_ENABLED=true
RRA_TRACING_ENDPOINT=${JAEGER_ENDPOINT}
