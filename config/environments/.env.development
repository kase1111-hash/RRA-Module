# RRA Module - Development Environment Configuration
# Copy to .env and modify as needed for local development

# =============================================================================
# Environment
# =============================================================================
RRA_ENV=development

# =============================================================================
# API Configuration
# =============================================================================
RRA_API_HOST=127.0.0.1
RRA_API_PORT=8000
RRA_API_URL=http://localhost:8000
RRA_DEBUG=true

# =============================================================================
# Logging
# =============================================================================
RRA_LOG_LEVEL=DEBUG

# =============================================================================
# Security (relaxed for development)
# =============================================================================
RRA_AUTH_ENABLED=false
RRA_CORS_ORIGINS=*
RRA_SECRETS_BACKEND=env

# Development API key (if auth enabled)
# RRA_API_KEYS=dev-key-12345

# =============================================================================
# Blockchain (Testnets)
# =============================================================================
RRA_DEFAULT_CHAIN=sepolia
STORY_NETWORK=testnet

# RPC URLs (use public endpoints for development)
ETH_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/demo
SEPOLIA_RPC_URL=https://rpc.sepolia.org
STORY_RPC_URL=https://aeneid.storyrpc.io

# DID Registry (testnet deployment)
# NLC_DID_REGISTRY_ADDRESS=0x...

# =============================================================================
# Database (SQLite for simplicity)
# =============================================================================
# Using SQLite by default - no configuration needed

# =============================================================================
# Cache (In-memory for development)
# =============================================================================
# Using in-memory cache by default - no configuration needed

# =============================================================================
# Feature Flags
# =============================================================================
RRA_FEATURE_ENABLE_STORY_PROTOCOL=true
RRA_FEATURE_ENABLE_AI_NEGOTIATION=true
RRA_FEATURE_ENABLE_AUTO_PRICING=false

# =============================================================================
# External Services (optional for development)
# =============================================================================
# WORLDCOIN_APP_ID=app_staging_...
# BRIGHTID_APP_NAME=rra-module-dev
# GITHUB_WEBHOOK_SECRET=dev-webhook-secret
# GITHUB_API_TOKEN=ghp_...
